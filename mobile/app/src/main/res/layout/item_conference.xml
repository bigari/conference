<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/textview_item_conf_title"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="conference title"/>

    <TextView
        android:id="@+id/textview_item_conf_access_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="accessCode"/>

    <ImageButton
        android:id="@+id/btn_conference_delete"
        android:layout_rowSpan="2"
        android:layout_gravity="end"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_baseline_delete_outline_24px"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textview_item_date_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:text="hamza"/>




</GridLayout>