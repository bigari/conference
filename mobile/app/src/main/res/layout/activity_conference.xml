<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.activities.ConferenceActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/survey_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/survey" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quiz_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/quiz" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/question_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/question" />
        </LinearLayout>
        <android.support.design.widget.BottomNavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/conference_bottom_navigation"
            app:itemBackground="@color/colorBackgroundDark"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:itemIconTint="@drawable/nav_item_color_state"
            app:itemTextColor="@drawable/nav_item_color_state"
            android:layout_gravity="start"
            app:menu="@menu/navigation_items" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>