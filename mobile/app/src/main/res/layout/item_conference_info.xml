<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_conference_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="conference title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_conference_date"
        tools:text="2019/12/29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_conference_description"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ultrices sollicitudin blandit. In vehicula pulvinar felis, a pharetra felis egestas. "
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_conference_location"
        android:layout_marginTop="10dp"
        tools:text="Rabat, Ensias"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>