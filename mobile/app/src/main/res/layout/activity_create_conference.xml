<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_create_conference"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.activities.CreateConferenceActivity">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:navigationIcon="@drawable/ic_baseline_arrow_back_24px"
            style="@style/ThemeOverlay.AppCompat.Dark"
            android:background="?colorPrimary"
            app:title="Create an event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </android.support.v7.widget.Toolbar>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_title"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittext_conference_create_title"
                    android:layout_width="match_parent"
                    android:hint="@string/conference_title_hint"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_startdate"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittext_conference_create_start_date"
                    android:layout_width="match_parent"
                    android:hint="@string/conference_start_date_hint"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_enddate"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittext_conference_create_end_date"
                    android:layout_width="match_parent"
                    android:editable="false"
                    android:inputType="none"
                    android:hint="@string/conference_end_date_hint"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/createconf_availability_note"/>


            <Button
                android:id="@+id/button_conference_create_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

</LinearLayout>




